@model Customer
@{
    Layout = "~/Views/Shared/LayoutLogin.cshtml";
}
<div class="container-login">
    <div style="padding-top:70px">
        <div class="row justify-content-end mr-5">
            <div class="col-xl-4 col-lg-12 col-md-9">
                <div class="card shadow-sm my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-form">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Login Customer</h1>
                                    </div>
                                    <hr style="width:100%">
                                    <form method="post" class="user">
                                        <div class="form-group">
                                            <label for="" class="form-label">Nama Akun<span class="text-danger"> *</span></label>
                                            <input type="text" class="form-control" name="Username" id="username" asp-for="username" />
                                        </div>
                                        <label for="" class="form-label">Kata Sandi<span class="text-danger"> *</span></label>
                                        <div class="input-group mb-4" id="show_hide_password">
                                            <input type="password" class="form-control" name="Password" id="pass" style="border-right:none" asp-for="password">
                                            <span class="input-group-text" style="background-color: white; border-radius:unset; border-left-style:none; border-bottom-right-radius:5px; border-top-right-radius:5px"><i class="fas fa-eye-slash" aria-hidden="true"></i></span>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-block" style="background-color:#0275d8; border-color:#0275d8; color:white; width:100%">Masuk</button>
                                        </div>
                                    </form>
                                    <hr>
                                    <span style="margin-top: 10px;">Belum punya akun ? <a asp-controller="Home" asp-action="RegisterCustomer">Register disini</a>.</span><br />
                                    <span style="margin-top: 10px;">Login sebagai Mekanik ? <a asp-controller="Home" asp-action="LoginMekanik">Klik disini</a>.</span><br />
                                    <span style="margin-top: 10px;">Login sebagai Prodi ? <a asp-controller="Home" asp-action="LoginProdi">Klik disini</a>.</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

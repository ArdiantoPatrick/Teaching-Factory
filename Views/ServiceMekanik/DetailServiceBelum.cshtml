@model ProjekTeFa.Models.PKB

@{
    Layout = "~/Views/Shared/LayoutMekanik.cshtml";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Detail Service</h1>
    <a asp-controller="ServiceMekanik" asp-action="ListService">
        <button type="button" class="btn btn-outline-primary mb-4" style="width: 150px">Back</button>
    </a>
</div>

<div class="row mb-3">
    <div class="col-12">
        <div class="card" style="padding: 20px 20px 20px 20px;">
            <form method="post" class="p-4">
                <div class="row">
                    <div class="col-12 form-group mt-3 text-dark" style="font-weight:bolder; font-size:25px; text-align:center">
                        Deskripsi Service
                        <hr />
                    </div>
                    <div class="col-12 form-group">
                        <textarea rows="8" class="form-control" id="perbaikan" name="perbaikan" readonly>@ViewBag.data.mekanisme_pengerjaan</textarea>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#table').DataTable();
    });


@model IEnumerable<Booking>
@{
    Layout = "~/Views/Shared/LayoutCustomer.cshtml";
}
<div class="d-sm-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0 text-gray-800">Riwayat Booking</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Booking</li>
    </ol>
</div>
<hr />

<div class="row mb-3">
    <div class="col-12">
        <div class="card" style="padding: 20px 20px 20px 20px;">
            <div class="table-responsive">
                <table id="table" class="table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Tanggal Service</th>
                            <th>Waktu Service</th>
                            <th>Jenis Kendaraan</th>
                            <th>Merk Kendaraan</th>
                            <th>Keluhan</th>
                            <th class="text-center">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var no = 1;
                        }
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td>@no</td>
                                <td>@obj.aktual_service_tanggal.Value.ToString("D")</td>
                                <td>@obj.aktual_service_waktu.Value.ToString("T")</td>
                                <td>@obj.jenis_kendaraan</td>
                                <td>@obj.merk_kendaraan</td>
                                <td>@obj.keluhan</td>
                                <td class="text-center">
                                    @if (obj.status == "Tidak Disetujui")
                                    {
                                        <span class="badge badge-danger" style="font-size:15px;">@obj.status</span>
                                    }
                                    else if (obj.status == "Selesai")
                                    {
                                        <span class="badge badge-success" style="font-size:15px;">@obj.status</span>
                                    }
                                </td>
                            </tr>
                            no++;

                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>
@model IEnumerable<ProjekTeFa.Models.PKB>

@{
    Layout = "~/Views/Shared/LayoutServiceAdvisor.cshtml";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Riwayat Transaksi</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Riwayat Transaksi</li>
    </ol>
</div>

<div class="row mb-3">
    <div class="col-12">
        <div class="card" style="padding: 20px 20px 20px 20px;">
            <div class="table-responsive">
                <table id="table" class="table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Nama Customer</th>
                            <th>Nomor Telepon</th>
                            <th>Jenis</th>
                            <th>Merk</th>
                            <th>Nomor Polisi</th>
                            <th>Tanggal Service</th>
                            <th>Biaya Service</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var no = 1;
                        }
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td>@no</td>
                                <td>@obj.Booking.Customer.nama_customer</td>
                                <td>@obj.Booking.Customer.notelp_customer</td>
                                <td>@obj.Booking.jenis_kendaraan</td>
                                <td>@obj.Booking.merk_kendaraan</td> 
                                <td>@obj.Booking.nomor_polisi</td>
                                <td>@obj.Booking.aktual_service_tanggal.Value.ToString("D")</td>
                                <td>@obj.harga</td>
                                <td style="color:#fff">
                                    <a class="btn btn-info btn-sm" asp-action="DetailBooking" asp-route-id="@obj.id_pkb">
                                        <i class="fas fa-book" data-toggle="tooltip" data-placement="top" title="Detail Booking"></i>
                                    </a>
                                    <a class="btn btn-success btn-sm" asp-action="DetailCustomer" asp-route-id="@obj.id_pkb">    
                                        <i class="fas fa-user" data-toggle="tooltip" data-placement="top" title="Detail Customer"></i>
                                    </a>
                                    <a class="btn btn-primary btn-sm" asp-action="DetailRC" asp-route-id="@obj.id_pkb" asp-route-idbo="@obj.id_booking">
                                        <i class="fas fa-chalkboard" data-toggle="tooltip" data-placement="top" title="Detail Round Checking"></i>
                                    </a>
                                </td>
                            </tr>
                            no++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>
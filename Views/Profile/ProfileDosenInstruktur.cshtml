@model ProjekTeFa.Models.Prodi

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/LayoutDosenInstruktur.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Profile Dosen / Instruktur</h1>
    <a asp-controller="Dashboard" asp-action="DosenInstruktur">
        <button type="button" class="btn btn-outline-primary mb-4" style="width: 150px">Back</button>
    </a>
</div>

<div class="row mb-3">
    <div class="col-12">
        <div class="card" style="padding: 20px 20px 20px 20px;">
            <form method="post" class="user">
                <div class="row">
                    <div class="col-12 form-group">
                        <label for="" class="form-label">Nama<span class="text-danger"> *</span></label>
                        <input type="hidden" class="form-control" asp-for="id_prodi">
                        <input type="hidden" class="form-control" asp-for="role">
                        <input type="hidden" class="form-control" asp-for="created_date">
                        <input type="hidden" class="form-control" asp-for="status">
                        <input type="text" class="form-control" asp-for="nama" readonly>
                    </div>
                    <div class="col-6 form-group">
                        <label for="" class="form-label">Email<span class="text-danger"> *</span></label>
                        <input type="email" class="form-control" asp-for="email" readonly>
                    </div>
                    <div class="col-6 form-group">
                        <label for="" class="form-label">Nomor Telepon<span class="text-danger"> *</span></label>
                        <input type="number" class="form-control" asp-for="notelp" onkeypress="if(this.value.length==14) return false;" readonly>
                    </div>
                    <div class="col-12 form-group">
                        <label for="" class="form-label">Alamat<span class="text-danger"> *</span></label>
                        <textarea type="text" class="form-control" asp-for="alamat" readonly></textarea>
                    </div>
                    <div class="col-6 form-group">
                        <label for="" class="form-label">NIM / NPK<span class="text-danger"> *</span></label>
                        <input type="number" class="form-control" asp-for="npk" readonly>
                    </div>
                    <div class="col-6">
                        <label for="" class="form-label">Kata Sandi<span class="text-danger"> *</span></label>
                        <div class="input-group" id="show_hide_password">
                            <input type="password" class="form-control" id="pass" style="border-right:none" asp-for="password" required>
                            <span class="input-group-text" style="background-color: white; border-radius:unset; border-left-style:none; border-bottom-right-radius:5px; border-top-right-radius:5px"><i class="fas fa-eye-slash" aria-hidden="true"></i></span>
                        </div>
                    </div>
                    <div class="col-2 form-group mt-4">
                        <button type="submit" id="simpan" class="btn btn-success btn-block">Update Profile</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#pass').val('@Model.password');
    });
</script>
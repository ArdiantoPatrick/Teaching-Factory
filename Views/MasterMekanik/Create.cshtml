@model ProjekTeFa.Models.Mekanik
@{
    Layout = "~/Views/Shared/LayoutServiceAdvisor.cshtml";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Create Mekanik</h1>
    <a asp-controller="MasterMekanik" asp-action="Index">
        <button type="button" class="btn btn-outline-primary mb-4" style="width: 150px">Back</button>
    </a>
</div>

<div class="row mb-3">
    <div class="col-12">
        <div class="card" style="padding: 20px 20px 20px 20px;">
            <form method="post" class="p-4">
                <div class="row">
                    <div class="col-12 form-group">
                        <label for="" class="form-label">Nama Mekanik<span class="text-danger"> *</span></label>
                        <input type="text" class="form-control" asp-for="nama_mekanik" required>
                    </div>
                    <div class="col-6 form-group">
                        <label for="" class="form-label">NIM Mekanik<span class="text-danger"> *</span></label>
                        <input type="number" class="form-control" asp-for="nim_mekanik" required>
                    </div>
                    <div class="col-6 form-group">
                        <label for="" class="form-label">Email Mekanik<span class="text-danger"> *</span></label>
                        <input type="email" class="form-control" asp-for="email_mekanik" required>
                    </div>
                    <div class="col-6 form-group">
                        <label for="" class="form-label">Nomor Telepon<span class="text-danger"> *</span></label>
                        <input type="number" class="form-control" asp-for="notelp_mekanik" onkeypress="if(this.value.length==14) return false;" id="notelp" required>
                    </div>
                    <div class="col-6 form-group">
                        <label for="" class="form-label">Grup Mekanik<span class="text-danger"> *</span></label>
                        <select asp-for="id_grup" class="form-control" asp-items="ViewBag.listgrup"></select>
                    </div>
                    <div class="col-12 form-group">
                        <label for="" class="form-label">Alamat<span class="text-danger"> *</span></label>
                        <textarea type="text" class="form-control" asp-for="alamat_mekanik" required></textarea>
                    </div>
                </div>
                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-success" id="simpan" style="width: 150px; align-items:center">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>


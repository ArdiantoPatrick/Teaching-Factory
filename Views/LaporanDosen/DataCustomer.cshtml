@model IEnumerable<Customer>
@{
    Layout = "~/Views/Shared/LayoutDosenInstruktur.cshtml";
}
<div class="d-sm-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0 text-gray-800">Data Customer</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Data Customer</li>
    </ol>
</div>
<hr />
<div class="row mb-3 mt-3">
    <div class="col-12">
        <div class="card" style="padding: 20px 20px 20px 20px;">
            <div class="table-responsive">
                <table id="table" class="table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Nama</th>
                            <th>Nomor Telepon</th>
                            <th>Alamat</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var no = 1;
                        }
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td>@no</td>
                                <td>@obj.nama_customer</td>
                                <td>@obj.notelp_customer</td>
                                <td>@obj.alamat</td>
                            </tr>
                            no++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#table').DataTable({
            scrollY: '50vh',
            scrollCollapse: true,
            paging: false,
            dom: 'Bfrtip',
            buttons: [
                'print', 'excel'
            ]
        });
    });
</script>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="~/img/logo/logo.png" rel="icon">
    <title>Teaching Factory</title>
    <link href="~/Service/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/Service/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Service/css/ruang-admin.min.css" rel="stylesheet">
    <script src="~/Service/vendor/jquery/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css" id="theme-styles">
    <link href="~/Website/assets/css/ruang-admin.min.css" rel="stylesheet">
    <link href="~/website/assets/css/style.css" rel="stylesheet" />
</head>

<body id="page-top">
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav sidebar sidebar-light accordion" id="accordionSidebar">
            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-controller="Dashboard" asp-action="Admin">
                <div class="sidebar-brand-icon">
                    <img src="~/Service/img/logo/logo.png">
                </div>
                <div class="sidebar-brand-text mx-3">Teaching Factory</div>
            </a>
            <hr class="sidebar-divider my-0">
            <li class="nav-item">
                <a class="nav-link active" asp-controller="Dashboard" asp-action="Admin">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <hr class="sidebar-divider">
            <div class="sidebar-heading">
                Kelola Data
            </div>
            <li class="nav-item">
                <a class="nav-link" asp-controller="MasterServiceAdvisor" asp-action="Index">
                    <i class="fas fa-user-circle fa-sm fa-fw mr-2 text-dark"></i>
                    <span>Data Service Advisor</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="MasterDosenInstruktur" asp-action="Index">
                    <i class="fas fa-user-circle fa-sm fa-fw mr-2 text-dark"></i>
                    <span>Data Dosen / Instruktur</span>
                </a>
            </li>
            <hr class="sidebar-divider">
            <div class="sidebar-heading">
                Account
            </div>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Logout">
                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-dark"></i>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
        <!-- Sidebar -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <!-- TopBar -->
                <nav class="navbar navbar-expand navbar-light bg-navbar topbar mb-4 static-top">
                    <button id="sidebarToggleTop" class="btn btn-link rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" id="userDropdown" role="button" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                @*  <img class="img-profile rounded-circle" src="~/Service/img/boy.png" style="max-width: 60px">*@
                                <i class="fa fa-user" aria-hidden="true"></i><span class="ml-2 d-none d-lg-inline text-white small">@ViewBag.namaadm (Admin)</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- Topbar -->
                <!-- Container Fluid-->
                <div class="container-fluid" id="container-wrapper">
                    @RenderBody()
                </div>
            </div>
            <!-- Footer -->
            <footer class="sticky-footer bg-white static-bottom">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>
                            copyright &copy; <script>document.write(new Date().getFullYear());</script> - developed by
                            <b><a href="https://indrijunanda.gitlab.io/" target="_blank">Kelompok 1</a></b>
                        </span>
                    </div>
                </div>
            </footer>
            <!-- Footer -->
        </div>
    </div>

    <!-- Scroll to top -->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <script src="~/website/assets/js/site.js"></script>
    <script src="~/Service/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Service/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Service/js/ruang-admin.min.js"></script>
    <script src="~/Service/vendor/chart.js/Chart.min.js"></script>
    <script src="~/Service/js/demo/chart-area-demo.js"></script>
    @if (TempData["Notifikasi"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                Swal.fire(
                    'Berhasil !',
                    '@TempData["Notifikasi"]',
                    'success'
                )
            }
        </script>
    }

    @if (TempData["Warning"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                Swal.fire(
                    'Peringatan !',
                    '@TempData["Warning"]',
                    'error'
                )
            }
        </script>
    }

    <script>
        $("a").on("click", function () {
            $("a").removeClass("active");
            $(this).addClass("active");
        });
    </script>
</body>
</html>